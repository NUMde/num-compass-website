# top-most EditorConfig file
root = true

# every file
[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell script files
[*.sh]
indent_size = 2

# Hugo configuration files
[*.toml]
indent_size = 2

# Web files
[*.{html,css,scss}]
indent_size = 2
